# =============================================================================
# Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase
# -----------------------------------------------------------------------------
# Get these from: https://supabase.com/dashboard/project/_/settings/api
# For local development, use values from `supabase start` output

SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Public keys (exposed to browser/mobile)
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
EXPO_PUBLIC_SUPABASE_URL=http://localhost:54321
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# -----------------------------------------------------------------------------
# App URLs
# -----------------------------------------------------------------------------

NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api/trpc
EXPO_PUBLIC_API_URL=http://localhost:3000/api/trpc

# -----------------------------------------------------------------------------
# Lemon Squeezy (Payments)
# -----------------------------------------------------------------------------
# Get these from: https://app.lemonsqueezy.com/settings/api

LEMON_SQUEEZY_API_KEY=
LEMON_SQUEEZY_STORE_ID=
LEMON_SQUEEZY_WEBHOOK_SECRET=

# -----------------------------------------------------------------------------
# Resend (Email)
# -----------------------------------------------------------------------------
# Get this from: https://resend.com/api-keys

RESEND_API_KEY=

# -----------------------------------------------------------------------------
# Inngest (Background Jobs)
# -----------------------------------------------------------------------------
# Get these from: https://app.inngest.com/env/production/manage/keys

INNGEST_EVENT_KEY=
INNGEST_SIGNING_KEY=

# -----------------------------------------------------------------------------
# Observability
# -----------------------------------------------------------------------------

# Sentry - https://sentry.io/settings/projects/
SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Axiom - https://app.axiom.co/settings/profile
AXIOM_TOKEN=
AXIOM_DATASET=app-logs

# PostHog - https://app.posthog.com/project/settings
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Better Stack - https://betterstack.com/logs
BETTERSTACK_API_KEY=
